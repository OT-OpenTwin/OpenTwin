/* QTabBar ----------------------------------------------------------------

https://doc.qt.io/qt-5/stylesheet-examples.html#customizing-qtabwidget-and-qtabbar

--------------------------------------------------------------------------- */
QTabBar, QDockWidget QTabBar {
    qproperty-drawBase: 0;
    border-radius: %number:Border Radius 1%;
    margin: 0px;
    padding: 2px;
    border: 0;
    /* left: 5px; move to the right by 5px - removed for fix */

    &::close-button {
        border: 0;
        margin: 0;
        padding: 4px;

        image: url('%file:/icons/window_close.png%');

        &:hover {
            image: url('%file:/icons/window_close_focus.png%');
        }

        &:pressed {
            image: url('%file:/icons/window_close_pressed.png%');
        }
    }

    &::tab {

        &:top:selected:disabled {
            border-bottom: 3px solid %color:Accent Color 1%;
            color: %color:Disabled Color%;
            background-color: %color:Widget Background 3%;
        }

        &:bottom:selected:disabled {
            border-top: 3px solid %color:Accent Color 1%;
            color: %color:Disabled Color%;
            background-color: %color:Widget Background 3%;
        }

        &:left:selected:disabled {
            border-right: 3px solid %color:Accent Color 1%;
            color: %color:Disabled Color%;
            background-color: %color:Widget Background 3%;
        }

        &:right:selected:disabled {
            border-left: 3px solid %color:Accent Color 1%;
            color: %color:Disabled Color%;
            background-color: %color:Widget Background 3%;
        }

        /* !selected and disabled ----------------------------------------- */
        &:top:!selected:disabled {
            border-bottom: 3px solid %color:Widget Background 1%;
            color: %color:Disabled Color%;
            background-color: %color:Widget Background 1%;
        }

        &:bottom:!selected:disabled {
            border-top: 3px solid %color:Widget Background 1%;
            color: %color:Disabled Color%;
            background-color: %color:Widget Background 1%;
        }

        &:left:!selected:disabled {
            border-right: 3px solid %color:Widget Background 1%;
            color: %color:Disabled Color%;
            background-color: %color:Widget Background 1%;
        }

        &:right:!selected:disabled {
            border-left: 3px solid %color:Widget Background 1%;
            color: %color:Disabled Color%;
            background-color: %color:Widget Background 1%;
        }

        /* selected ------------------------------------------------------- */
        &:top:!selected {
            border-bottom: 2px solid %color:Widget Background 1%;
            margin-top: 2px;
        }

        &:bottom:!selected {
            border-top: 2px solid %color:Widget Background 1%;
            margin-bottom: 2px;
        }

        &:left:!selected {
            border-left: 2px solid %color:Widget Background 1%;
            margin-right: 2px;
        }

        &:right:!selected {
            border-right: 2px solid %color:Widget Background 1%;
            margin-left: 2px;
        }

        &:top {
            background-color: %color:Widget Background 3%;
            margin-left: 2px;
            padding-left: 4px;
            padding-right: 4px;
            padding-top: 2px;
            padding-bottom: 2px;
            min-width: 5px;
            border-bottom: 3px solid %color:Widget Background 3%;
            border-top-left-radius: %number:Border Radius 1%;
            border-top-right-radius: %number:Border Radius 1%;

            &:selected {
                background-color: %color:Widget Background 4%;
                border-bottom: 3px solid %color:Accent Color 4%;
                border-top-left-radius: %number:Border Radius 1%;
                border-top-right-radius: %number:Border Radius 1%;
            }

            &:!selected:hover {
                border-coor: %color:Border Selection Color 3%;
                border-bottom: 3px solid %color:Accent Color 3%;
                /* Fixes spyder-ide/spyder#9766 and #243 */
                padding-left: 3px;
                padding-right: 3px;
            }
        }

        &:bottom {
            border-top: 3px solid %color:Widget Background 3%;
            background-color: %color:Widget Background 3%;
            margin-left: 2px;
            padding-left: 4px;
            padding-right: 4px;
            padding-top: 2px;
            padding-bottom: 2px;
            border-bottom-left-radius: %number:Border Radius 1%;
            border-bottom-right-radius: %number:Border Radius 1%;
            min-width: 5px;

            &:selected {
                background-color: %color:Widget Background 4%;
                border-top: 3px solid %color:Accent Color 4%;
                border-bottom-left-radius: %number:Border Radius 1%;
                border-bottom-right-radius: %number:Border Radius 1%;
            }

            &:!selected:hover {
                border-coor: %color:Border Selection Color 3%;
                border-top: 3px solid %color:Accent Color 3%;
                /* Fixes spyder-ide/spyder#9766 and #243 */
                padding-left: 3px;
                padding-right: 3px;
            }

        }

        &:left {
            background-color: %color:Widget Background 3%;
            margin-top: 2px;
            padding-left: 2px;
            padding-right: 2px;
            padding-top: 4px;
            padding-bottom: 4px;
            border-top-left-radius: %number:Border Radius 1%;
            border-bottom-left-radius: %number:Border Radius 1%;
            min-height: 5px;

            &:selected {
                background-color: %color:Widget Background 4%;
                border-right: 3px solid %color:Accent Color 4%;
            }

            &:!selected:hover {
                border-coor: %color:Border Selection Color 3%;
                border-right: 3px solid %color:Accent Color 3%;
                /* Fixes different behavior #271 */
                margin-right: 0px;
                padding-right: -1px;
            }
        }

        &:right {
            background-color: %color:Widget Background 3%;
            margin-top: 2px;
            padding-left: 2px;
            padding-right: 2px;
            padding-top: 4px;
            padding-bottom: 4px;
            border-top-right-radius: %number:Border Radius 1%;
            border-bottom-right-radius: %number:Border Radius 1%;
            min-height: 5px;

            &:selected {
                background-color: %color:Widget Background 4%;
                border-left: 3px solid %color:Accent Color 4%;

            }

            &:!selected:hover {
                border-coor: %color:Border Selection Color 3%;
                border-left: 3px solid %color:Accent Color 3%;
                /* Fixes different behavior #271 */
                margin-left: 0px;
                padding-left: 0px;
            }
        }
    }

    QToolButton {
        /* Fixes #136 */
        background-color: %color:Widget Background 3%;
        height: 12px;
        width: 12px;

        &:pressed {
            background-color: %color:Widget Background 3%;

            &:hover {
                border-coor: %color:Border Selection Color 2%;
            }
        }

        &::left-arrow {
            &:enabled {
                image: url('%file:/icons/arrow_left.png%');
            }

            &:disabled {
                image: url('%file:/icons/arrow_left_disabled.png%');
            }
        }

        &::right-arrow {
            &:enabled {
                image: url('%file:/icons/arrow_right.png%');
            }

            &:disabled {
                image: url('%file:/icons/arrow_right_disabled.png%');
            }
        }
    }
}

/* QDockWiget -------------------------------------------------------------

