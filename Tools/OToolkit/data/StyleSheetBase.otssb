/* QToolButton ------------------------------------------------------------

https://doc.qt.io/qt-5/stylesheet-examples.html#customizing-qtoolbutton

--------------------------------------------------------------------------- */
QToolButton {
    background-color: %color:Widget Background 3%;
    color: %color:Text Color 1%;
    border-radius: %number:Border Radius 1%;
    padding: 2px;
    outline: none;
    border: none;

    &:disabled {
        background-color: %color:Widget Background 3%;
        color: %color:Disabled Color%;
        border-radius: %number:Border Radius 1%;
        padding: 2px;
    }

    &:checked {
        background-color: %color:Widget Background 5%;
        border-radius: %number:Border Radius 1%;
        padding: 2px;
        outline: none;

        &:disabled {
            background-color: %color:Widget Background 5%;
            color: %color:Disabled Color%;
            border-radius: %number:Border Radius 1%;
            padding: 2px;
            outline: none;
        }

        &:hover {
            background-color: %color:Widget Background 4%;
            color: %color:Text Color 1%;
        }

        &:pressed {
            background-color: %color:Widget Background 5%;
        }

        &:selected {
            background: %color:Widget Background 5%;
            color: %color:Text Color 1%;
        }

    }

    &:hover {
        background-color: %color:Widget Background 4%;
        color: %color:Text Color 1%;
    }

    &:pressed {
        background-color: %color:Widget Background 5%;
    }

    &:selected {
        background: %color:Widget Background 5%;
        color: %color:Text Color 1%;
    }

    /* The subcontrols below are used only in the DelayedPopup mode */
    &[popupMode="0"] {
        /* Only for DelayedPopup */
        padding-right: 2px;
    }

    /* The subcontrols below are used only in the MenuButtonPopup mode */
    &[popupMode="1"] {
        /* Only for MenuButtonPopup */
        padding-right: 20px;

        &::menu-button {
            border: none;

            &:hover {
                border: none;
                border-left: 1px solid %color:Widget Background 3%;
                border-radius: 0;
            }
        }
    }

    /* The subcontrol below is used only in the InstantPopup or DelayedPopup mode */
    &[popupMode="2"] {
        /* Only for InstantPopup */
        padding-right: 2px;
    }

    &::menu-button {
        padding: 2px;
        border-radius: %number:Border Radius 1%;
        width: 12px;
        border: none;
        outline: none;

        &:hover {
            border-coor: %color:Border Selection Color 2%;
        }

        &:checked {
            &:hover {
                border-coor: %color:Border Selection Color 2%;
            }
        }
    }

    &::menu-indicator {
        image: url('%file:/icons/arrow_down.png%');
        height: 8px;
        width: 8px;
        top: 0;
        /* Exclude a shift for better image */
        left: -2px;
        /* Shift it a bit */
    }

    &::menu-arrow {
        image: url('%file:/icons/arrow_down.png%');
        height: 8px;
        width: 8px;

        &:hover {
            image: url('%file:/icons/arrow_down_focus.png%');
        }
    }
}

