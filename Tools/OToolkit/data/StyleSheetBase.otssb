        border-radius: 0;
        text-align: left;
        font-size: 13px;

        &::horizontal {
            padding-top: 0;
            padding-bottom: 0;
            padding-left: 4px;
            padding-right: 4px;
            border-left: %color:Border Color 1%;

            &::first,
            &::only-one {
                border-left: %color:Border Color 2%;
            }

            &:disabled {
                color: %color:Disabled Color%;
            }
        }

        &::vertical {
            padding-top: 0;
            padding-bottom: 0;
            padding-left: 4px;
            padding-right: 4px;
            border-top: %color:Border Color 1%;

            &::first,
            &::only-one {
                border-top: %color:Border Color 2%;
            }

            &:disabled {
                color: %color:Disabled Color%;
            }
        }
    }

    &::down-arrow {
        /* Those settings (border/width/height/background-color) solve bug */
        /* transparent arrow background and size */
        background-color: %color:Widget Background 3%;
        border: none;
        height: 12px;
        width: 12px;
        padding-left: 2px;
        padding-right: 2px;
        image: url('%file:/icons/arrow_down.png%');
    }

    &::up-arrow {
        background-color: %color:Widget Background 3%;
        border: none;
        height: 12px;
        width: 12px;
        padding-left: 2px;
        padding-right: 2px;
        image: url('%file:/icons/arrow_up.png%');
    }
}

/* QToolBox --------------------------------------------------------------

https://doc.qt.io/qt-5/stylesheet-examples.html#customizing-qtoolbox

--------------------------------------------------------------------------- */
QToolBox {
    padding: 0px;
    border: 0px;
    border-color: %color:Border Color 2%;

    &:selected {
        padding: 0px;
        border: 2px solid %color:Accent Color 2%;
    }

    &::tab {
        background-color: %color:Widget Background 1%;
        border-color: %color:Border Color 2%;
        color: %color:Text Color 1%;
        border-top-left-radius: %number:Border Radius 1%;
        border-top-right-radius: %number:Border Radius 1%;

        &:disabled {
            color: %color:Disabled Color%;
        }

        &:selected {
            background-color: %color:Widget Background 5%;
            border-bottom: 2px solid %color:Accent Color 2%;

            &:disabled {
                background-color: %color:Widget Background 3%;
                border-bottom: 2px solid %color:Accent Color 1%;
            }
        }

        &:!selected {
            background-color: %color:Widget Background 3%;
            border-bottom: 2px solid %color:Widget Background 3%;

            &:disabled {
                background-color: %color:Widget Background 1%;
            }

        }

        &:hover {
            border-color: %color:Accent Color 3%;
            border-bottom: 2px solid %color:Accent Color 3%;
        }
    }

    QScrollArea {
        padding: 0px;
        border: 0px;
        background-color: %color:Widget Background 1%;
    }
}

/* QFrame -----------------------------------------------------------------

https://doc.qt.io/qt-5/stylesheet-examples.html#customizing-qframe
https://doc.qt.io/qt-5/qframe.html#-prop
https://doc.qt.io/qt-5/qframe.html#details
https://stackoverflow.com/questions/14581498/qt-stylesheet-for-hline-vline-color

--------------------------------------------------------------------------- */

/* (dot) .QFrame  fix #141, #126, #123 */

.QFrame {
    border-radius: %number:Border Radius 1%;
    border-color: %color:Border Color 2%;

    /* No frame */
    &[frameShape="0"] {
        border-radius: %number:Border Radius 1%;
        border: 1px transparent %color:Widget Background 3%;
    }

    /* HLine */
    &[frameShape="4"] {
        max-height: 2px;
        border: none;
        background-color: %color:Widget Background 3%;
    }

    /* HLine */
    &[frameShape="5"] {
        max-width: 2px;
        border: none;
        background-color: %color:Widget Background 3%;
    }

}

/* QSplitter --------------------------------------------------------------

https://doc.qt.io/qt-5/stylesheet-examples.html#customizing-qsplitter

--------------------------------------------------------------------------- */
QSplitter {
    background-color: %color:Widget Background 3%;
    spacing: 0px;
    padding: 0px;
    margin: 0px;

    &::handle {
        background-color: %color:Widget Background 3%;
        border: 0px solid %color:Widget Background 1%;
        spacing: 0px;
        padding: 1px;
        margin: 0px;

        &:hover {
            background-color: %color:Text Color 4%;
        }

        &:horizontal {
            width: 5px;
            image: url('%file:/icons/line_vertical.png%');
        }

        &:vertical {
            height: 5px;
            image: url('%file:/icons/line_horizontal.png%');
        }
    }
}

/* QDateEdit, QDateTimeEdit -----------------------------------------------

--------------------------------------------------------------------------- */
QDateEdit, QDateTimeEdit {
    selection-background-color: %color:Accent Color 2%;
    border-style: solid;
    border-color: %color:Border Color 2%;
    border-radius: %number:Border Radius 1%;

    /* This fixes 103, 111 */
    padding-top: 2px;

    /* This fixes 103, 111 */
    padding-bottom: 2px;
    padding-left: 4px;
    padding-right: 4px;
    min-width: 10px;

    &:on {
        selection-background-color: %color:Accent Color 2%;
    }

    &::drop-down {
        subcontrol-origin: padding;
        subcontrol-position: top right;
        width: 12px;
        border-left: 1px solid %color:Widget Background 3%;
    }

    &::down-arrow {
        image: url('%file:/icons/arrow_down_disabled.png%');
        height: 8px;
        width: 8px;

        &:on,
        &:hover,
        &:focus {
            image: url('%file:/icons/arrow_down.png%');
        }

    }

    QAbstractItemView {
        background-color: %color:Widget Background 1%;
        border-radius: %number:Border Radius 1%;
        border-color: %color:Border Color 2%;
        selection-background-color: %color:Accent Color 2%;
    }
}


/* QAbstractView ----------------------------------------------------------

--------------------------------------------------------------------------- */
QAbstractView {

    &:hover {
        border-coor: %color:Border Selection Color 2%;
        color: %color:Text Color 1%;
    }

    &:selected {
        background: %color:Accent Color 2%;
        color: %color:Widget Background 3%;
    }
}