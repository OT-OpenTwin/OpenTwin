/* QSlider ----------------------------------------------------------------

https://doc.qt.io/qt-5/stylesheet-examples.html#customizing-qslider

--------------------------------------------------------------------------- */
QSlider {

    &:disabled {
        background: %color:Widget Background 1%;
    }

    &:focus {
        border: none;
    }

    &::groove {
        &:horizontal {
            background: %color:Widget Background 3%;
            border-color: %color:Border Color 2%;
            height: 4px;
            margin: 0px;
            border-radius: %number:Border Radius 1%;
        }

        &:vertical {
            background: %color:Widget Background 3%;
            border-color: %color:Border Color 2%;
            width: 4px;
            margin: 0px;
            border-radius: %number:Border Radius 1%;
        }
    }

    &::add-page {

        &:vertical {
            background: %color:Accent Color 2%;
            border-color: %color:Border Color 2%;
            width: 4px;
            margin: 0px;
            border-radius: %number:Border Radius 1%;

            :disabled {
                background: %color:Accent Color 1%;
            }
        }
    }

    &::sub-page {

        &:horizontal {
            background: %color:Accent Color 2%;
            border-color: %color:Border Color 2%;
            height: 4px;
            margin: 0px;
            border-radius: %number:Border Radius 1%;

            &:disabled {
                background: %color:Accent Color 1%;
            }
        }
    }

    &::handle {

        &:horizontal {
            background: %color:Text Color 4%;
            border-color: %color:Border Color 2%;
            width: 8px;
            height: 8px;
            margin: -8px 0px;
            border-radius: %number:Border Radius 1%;

            &:hover {
                background: %color:Accent Color 2%;
                border-coor: %color:Border Selection Color 2%;
            }

            &:focus {
                border-coor: %color:Border Selection Color 3%;
            }
        }

        &:vertical {
            background: %color:Text Color 4%;
            border-color: %color:Border Color 2%;
            width: 8px;
            height: 8px;
            margin: 0 -8px;
            border-radius: %number:Border Radius 1%;

            &:hover {
                background: %color:Accent Color 2%;
                border-coor: %color:Border Selection Color 2%;
            }

            &:focus {
                border-coor: %color:Border Selection Color 3%;
            }
        }
    }
}

