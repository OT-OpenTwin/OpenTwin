QTreeView:selected,
QListView:selected,
QTableView:selected,
QColumnView:selected {
    background-color: %color:Accent Color 2%;
    color: %color:Widget Background 3%;
}

QTreeView:focus,
QListView:focus,
QTableView:focus,
QColumnView:focus {
    border-color: %color:Border Selection Color 3%;
}

QTreeView::item:pressed,
QListView::item:pressed,
QTableView::item:pressed,
QColumnView::item:pressed {
    background-color: %color:Accent Color 2%;
}

QTreeView::item:selected:active,
QListView::item:selected:active,
QTableView::item:selected:active,
QColumnView::item:selected:active {
    background-color: %color:Accent Color 2%;   
}

QTreeView::item:selected:!active,
QListView::item:selected:!active,
QTableView::item:selected:!active,
QColumnView::item:selected:!active {
    color: %color:Text Color 1%;
    background-color: %color:Widget Background 2%;
}

QTreeView::item:!selected:hover,
QListView::item:!selected:hover,
QTableView::item:!selected:hover,
QColumnView::item:!selected:hover {
    outline: 0;
    color: %color:Text Color 1%;
    background-color: %color:Widget Background 2%;
}

QTableCornerButton::section {
    background-color: %color:Widget Background 1%;
    border: 1px transparent %color:Widget Background 3%;
    border-radius: 0px;
}

/* ##################################################################################### */

/* QHeaderView */

QHeaderView {
    background-color: %color:Widget Background 3%;
    border: 0px transparent %color:Widget Background 3%;
    padding: 0;
    margin: 0;
    border-radius: 0;
}
    
QHeaderView:disabled {
    background-color: %color:Widget Background 3%;
    border: 1px transparent %color:Widget Background 3%;
}

QHeaderView::section {
    background-color: %color:Widget Background 3%;
    color: %color:Text Color 1%;
    border-radius: 0;
    text-align: left;
    font-size: 13px;
}

QHeaderView::section::horizontal {
    padding-top: 0;
    padding-bottom: 0;
    padding-left: 4px;
    padding-right: 4px;
    border-left: %color:Border Color 1%;
}

QHeaderView::section::horizontal::first,
QHeaderView::section::horizontal::only-one {
    border-left: %color:Border Color 2%;
}

QHeaderView::section::horizontal:disabled {
    color: %color:Disabled Color%;
}

QHeaderView::section::vertical {
    padding-top: 0;
    padding-bottom: 0;
    padding-left: 4px;
    padding-right: 4px;
    border-top: %color:Border Color 1%;
}
            
QHeaderView::section::vertical::first,
QHeaderView::section::vertical::only-one {
    border-top: %color:Border Color 2%;
}

QHeaderView::section::vertical:disabled {
    color: %color:Disabled Color%;
}

QHeaderView::down-arrow {
    /* Those settings (border/width/height/background-color) solve bug */
    /* transparent arrow background and size */
    background-color: %color:Widget Background 3%;
    border: none;
    height: 12px;
    width: 12px;
    padding-left: 2px;
    padding-right: 2px;
    image: url('%file:/icons/arrow_down.png%');
}

QHeaderView::up-arrow {
    background-color: %color:Widget Background 3%;
    border: none;
    height: 12px;
    width: 12px;
    padding-left: 2px;
    padding-right: 2px;
    image: url('%file:/icons/arrow_up.png%');
}

/* ##################################################################################### */

/* QToolBox */

QToolBox {
    padding: 0px;
    border: 0px;
    border-color: %color:Border Color 2%;
}

QToolBox:selected {
    padding: 0px;
    border: 2px solid %color:Accent Color 2%;
}

QToolBox::tab {
    background-color: %color:Widget Background 1%;
    border-color: %color:Border Color 2%;
    color: %color:Text Color 1%;
    border-top-left-radius: %number:Border Radius 1%;
    border-top-right-radius: %number:Border Radius 1%;
}

QToolBox::tab:disabled {
    color: %color:Disabled Color%;
}

QToolBox::tab:selected {
    background-color: %color:Widget Background 5%;
    border-bottom: 2px solid %color:Accent Color 2%;
}

QToolBox::tab:selected:disabled {
    background-color: %color:Widget Background 3%;
    border-bottom: 2px solid %color:Accent Color 1%;
}

QToolBox::tab:!selected {
    background-color: %color:Widget Background 3%;
    border-bottom: 2px solid %color:Widget Background 3%;
}

QToolBox::tab:!selected:disabled {
    background-color: %color:Widget Background 1%;
}

QToolBox::tab:hover {
    border-color: %color:Widget Hover Color 1%;
    border-bottom: 2px solid %color:Widget Hover Color 1%;
}

QToolBox QScrollArea {
    padding: 0px;
    border: 0px;
    background-color: %color:Widget Background 1%;
}

/* ##################################################################################### */

/* QFrame */

.QFrame {
    border-radius: %number:Border Radius 1%;
    border-color: %color:Border Color 2%;
    border-width: %number:Border Width 2%;
}

/* No frame */
.QFrame[frameShape="0"] {
    border-radius: %number:Border Radius 1%;
    border: 1px transparent %color:Widget Background 3%;
}

/* HLine */
.QFrame[frameShape="4"] {
    max-height: 2px;
    border: none;
    background-color: %color:Widget Background 3%;
}

/* HLine */
.QFrame[frameShape="5"] {
    max-width: 2px;
    border: none;
    background-color: %color:Widget Background 3%;
}

/* ##################################################################################### */

/* QSplitter */

QSplitter {
    background-color: %color:Widget Background 3%;
    spacing: 0px;
    padding: 0px;
    margin: 0px;
}

QSplitter::handle {
    background-color: %color:Widget Background 3%;
    border: 0px solid %color:Widget Background 1%;
    spacing: 0px;
    padding: 1px;
    margin: 0px;
}

QSplitter::handle:hover {
    background-color: %color:Text Color 4%;
}

QSplitter::handle:horizontal {
    width: 5px;
    image: url('%file:/icons/line_vertical.png%');
}

QSplitter::handle:vertical {
    height: 5px;
    image: url('%file:/icons/line_horizontal.png%');
}

/* ##################################################################################### */

/* QDateEdit, QDateTimeEdit */

QDateEdit, QDateTimeEdit {
    selection-background-color: %color:Accent Color 2%;
    border-style: solid;
    border-color: %color:Border Color 2%;
    border-width: %number:Border Width 2%;
    border-radius: %number:Border Radius 1%;

    /* This fixes 103, 111 */
    padding-top: 2px;

    /* This fixes 103, 111 */
    padding-bottom: 2px;
    padding-left: 4px;
    padding-right: 4px;
    min-width: 10px;
}

QDateEdit:on,
QDateTimeEdit:on {
    selection-background-color: %color:Accent Color 2%;
}

QDateEdit::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 12px;
    border-left: 1px solid %color:Widget Background 3%;
}

QDateEdit::down-arrow,
QDateTimeEdit::down-arrow {
    image: url('%file:/icons/arrow_down_disabled.png%');
    height: 8px;
    width: 8px;
}

QDateEdit::down-arrow:on,
QDateEdit::down-arrow:hover,
QDateEdit::down-arrow:focus,
QDateTimeEdit::down-arrow:on,
QDateTimeEdit::down-arrow:hover,
QDateTimeEdit::down-arrow:focus {
    image: url('%file:/icons/arrow_down.png%');
}

QDateEdit QAbstractItemView,
QDateTimeEdit QAbstractItemView {
    background-color: %color:Widget Background 1%;
    border-radius: %number:Border Radius 1%;
    border-color: %color:Border Color 2%;
    border-width: %number:Border Width 2%;
    selection-background-color: %color:Accent Color 2%;
}


/* ##################################################################################### */

/* QAbstractView */

QAbstractView:hover {
    border-color: %color:Border Selection Color 2%;
    color: %color:Text Color 1%;
}

QAbstractView:selected {
    background: %color:Accent Color 2%;
    color: %color:Widget Background 3%;
}