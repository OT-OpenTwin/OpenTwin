/* This file used the "QDarkStyleSheet/qdarkstyle/qss/_style.scss" as a template. */

/* Reset */

* {
    padding: 0px;
    margin: 0px;
    border: 0px;
    border-style: none;
    border-image: none;
    outline: 0;
}

QToolBar * {
    margin: 0px;
    padding: 0px;
  }

/* ##################################################################################### */

/* QWidget */

QWidget {
    background-color: %color:Widget Background 1%;
    border: 0px solid %color:Widget Background 3%;
    padding: 0px;
    color: %color:Text Color 1%;
    selection-background-color: %color:Accent Color 2%;
    selection-color: %color:Text Color 1%;
}

QWidget:disabled {
    background-color: %color:Widget Background 1%;
    color: %color:Disabled Color%;
    selection-background-color: %color:Accent Color 1%;
    selection-color: %color:Disabled Color%;
}

QWidget::item {
    background-color: %color:Accent Color 3%;
}

QWidget::item:!selected {
    background-color: %color:Accent Color 2%;
}

QWidget::item:hover:!selected {
    background-color: %color:Accent Color 3%;
}

/* ##################################################################################### */

/* QMainWindow */

QMainWindow::separator {
    background-color: %color:Widget Background 3%;
    border: 0px solid %color:Widget Background 1%;
    spacing: 0px;
    padding: 2px;
}

QMainWindow::separator:hover {
    background-color: %color:Widget Background 5%;
    border: 0px solid %color:Accent Color 3%;
}

QMainWindow::separator:horizontal {
    width: 5px;
    margin-top: 2px;
    margin-bottom: 2px;
    image: url('%file:/icons/toolbar_separator_vertical.png%');
}

QMainWindow::separator:vertical {
    height: 5px;
    margin-left: 2px;
    margin-right: 2px;
    image: url('%file:/icons/toolbar_separator_horizontal.png%');
}

/* ##################################################################################### */

/* QToolTip */

QToolTip {
    background-color: %color:Accent Color 2%;
    color: %color:Text Color 1%;
    /* If you remove the border property, background stops working on Windows */
    border: none;
    /* Remove padding, for fix combo box tooltip */
    padding: 0px;
}

/* ##################################################################################### */

/* QStatusBar */

QStatusBar {
    border-color: %color:Border Color 2%;

    /* Fixes Spyder #9120, #9121 */
    background: %color:Widget Background 3%;
}

QStatusBar::item {
    border: none;
}

QToolTip {
    background-color: %color:Accent Color 3%;
    border-color: %color:Border Color 1%;
    color: %color:Widget Background 1%;

    /* Remove padding, for fix combo box tooltip */
    padding: 0px;

    /* Reducing transparency to read better */
    opacity: %number:Opacity ToolTip%;
}

QStatusBar QLabel {
    background: transparent;
}

/* ##################################################################################### */

/* QCheckBox */

QCheckBox {
    background-color: %color:Widget Background 1%;
    color: %color:Text Color 1%;
    spacing: 4px;
    outline: none;
    padding-top: 4px;
    padding-bottom: 4px;
}
    
QCheckBox:focus {
    border: none;
}

QWidget:disabled {
    background-color: %color:Widget Background 1%;
    color: %color:Disabled Color%;
}

QCheckBox::indicator {
    margin-left: 2px;
    height: 14px;
    width: 14px;
}
 
QCheckBox::indicator:unchecked {
    image: url('%file:/icons/checkbox_unchecked.png%');
}

QCheckBox::indicator:unchecked:hover,
QCheckBox::indicator:unchecked:focus,
QCheckBox::indicator:unchecked:pressed {
    border: none;
    image: url('%file:/icons/checkbox_unchecked_focus.png%');
}

QCheckBox::indicator:unchecked:disabled {
    image: url('%file:/icons/checkbox_unchecked_disabled.png%');
}

QCheckBox::indicator:checked {
    image: url('%file:/icons/checkbox_checked.png%');
}

QCheckBox::indicator:checked:hover,
QCheckBox::indicator:checked:focus,
QCheckBox::indicator:checked:pressed {
    border: none;
    image: url('%file:/icons/checkbox_checked_focus.png%');
}

QCheckBox::indicator:checked:disabled {
    image: url('%file:/icons/checkbox_checked_disabled.png%');
}

QCheckBox::indicator:indeterminate {
    image: url('%file:/icons/checkbox_indeterminate.png%');
}

QCheckBox::indicator:indeterminate:disabled {
    image: url('%file:/icons/checkbox_indeterminate_disabled.png%');
}

QCheckBox::indicator:indeterminate:focus,
QCheckBox::indicator:indeterminate:hover,
QCheckBox::indicator:indeterminate:pressed {
    image: url('%file:/icons/checkbox_indeterminate_focus.png%');
}

/* ##################################################################################### */

/* QGroupBox */

QGroupBox {
    font-weight: bold;
    border-color: %color:Border Color 2%;
    border-radius: %number:Border Radius 1%;
    padding: 2px;
    margin-top: 6px;
    margin-bottom: 4px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 4px;
    padding-left: 2px;
    padding-right: 4px;
    padding-top: -4px;
}

QGroupBox::indicator {
    margin-left: 2px;
    margin-top: 2px;
    padding: 0;
    height: 14px;
    width: 14px;
}

QGroupBox::indicator:unchecked {
    border: none;
    image: url('%file:/icons/checkbox_unchecked.png%');
}

QGroupBox::indicator:unchecked:hover,
QGroupBox::indicator:unchecked:focus,
QGroupBox::indicator:unchecked&:pressed {
    border: none;
    image: url('%file:/icons/checkbox_unchecked_focus.png%');
}

QGroupBox::indicator:unchecked:disabled {
    image: url('%file:/icons/checkbox_unchecked_disabled.png%');
}

QGroupBox::indicator:checked {
    border: none;
    image: url('%file:/icons/checkbox_checked.png%');
}

QGroupBox::indicator:checked:hover,
QGroupBox::indicator:checked:focus,
QGroupBox::indicator:checked:pressed {
    border: none;
    image: url('%file:/icons/checkbox_checked_focus.png%');
}

QGroupBox::indicator:checked:disabled {
    image: url('%file:/icons/checkbox_checked_disabled.png%');
}

/* ##################################################################################### */

/* QRadioButton */

QRadioButton {
    background-color: %color:Widget Background 1%;
    color: %color:Text Color 1%;
    spacing: 4px;
    padding-top: 4px;
    padding-bottom: 4px;
    border: none;
    outline: none;
}

QRadioButton:focus {
    border: none;
}

QRadioButton:disabled {
    background-color: %color:Widget Background 1%;
    color: %color:Disabled Color%;
    border: none;
    outline: none;
}

QRadioButton QWidget {
    background-color: %color:Widget Background 1%;
    color: %color:Text Color 1%;
    spacing: 0px;
    padding: 0px;
    outline: none;
    border: none;
}

QRadioButton::indicator {
    border: none;
    outline: none;
    margin-left: 2px;
    height: 14px;
    width: 14px;
}

QRadioButton::indicator:unchecked {
    image: url('%file:/icons/radio_unchecked.png%');
}

QRadioButton::indicator:unchecked:hover,
QRadioButton::indicator:unchecked:focus,
QRadioButton::indicator:unchecked:pressed {
    border: none;
    outline: none;
    image: url('%file:/icons/radio_unchecked_focus.png%');
}

QRadioButton::indicator:disabled {
    image: url('%file:/icons/radio_unchecked_disabled.png%');
}
        
QRadioButton::indicator:disabled:checked {
    border: none;
    outline: none;
    image: url('%file:/icons/radio_checked.png%');
}

QRadioButton::indicator:disabled:checked:hover,
QRadioButton::indicator:disabled:checked:focus,
QRadioButton::indicator:disabled:checked:pressed {
    border: none;
    outline: none;
    image: url('%file:/icons/radio_checked_focus.png%');
}

QRadioButton::indicator:disabled:checked:disabled {
    outline: none;
    image: url('%file:/icons/radio_checked_disabled.png%');
}

/* ##################################################################################### */

/* QMenuBar */

QMenuBar {
    background-color: %color:Widget Background 3%;
    padding: 2px;
    border-color: %color:Border Color 1%;
    color: %color:Text Color 1%;
    selection-background-color: %color:Accent Color 3%;
}

QMenuBar:focus {
    border-coor: %color:Border Selection Color 2%;
}

QMenuBar::item {
    background: transparent;
    padding: 4px;
}

QMenuBar::item:selected {
    padding: 4px;
    background: transparent;
    border: 0px solid %color:Widget Background 3%;
    background-color: %color:Accent Color 3%;
}

QMenuBar::item:pressed {
    padding: 4px;
    border: 0px solid %color:Widget Background 3%;
    background-color: %color:Accent Color 3%;
    color: %color:Text Color 1%;
    margin-bottom: 0px;
    padding-bottom: 0px;
}

/* ##################################################################################### */

/* QMenu */

QMenu {
    border: 0px solid %color:Widget Background 3%;
    color: %color:Text Color 1%;
    margin: 0px;
    background-color: %color:Widget Background 2%;
    selection-background-color: %color:Accent Color 3%;
}

QMenu::separator {
    height: 1px;
    background-color: %color:Widget Background 5%;
    color: %color:Text Color 1%;
}

QMenu::item {
    background-color: %color:Widget Background 2%;
    padding: 4px 24px 4px 28px;
    /* Reserve space for selection border */
    border: 1px transparent %color:Widget Background 3%;
}

QMenu::item:selected {
    color: %color:Text Color 1%;
    background-color: %color:Accent Color 3%;
}

QMenu::item:pressed {
    background-color: %color:Accent Color 3%;
}

QMenu::icon {
    padding-left: 10px;
    width: 14px;
    height: 14px;
}

QMenu::indicator {
    padding-left: 8px;
    width: 12px;
    height: 12px;
}

/* non-exclusive indicator = check box style indicator (see QActionGroup::setExclusive) */
QMenu::indicator:non-exclusive:unchecked {
    image: url('%file:/icons/checkbox_unchecked.png%');
}

QMenu::indicator:non-exclusive:unchecked:hover,
QMenu::indicator:non-exclusive:unchecked:focus,
QMenu::indicator:non-exclusive:unchecked:pressed {
    border: none;
    image: url('%file:/icons/checkbox_unchecked_focus.png%');
}

QMenu::indicator:non-exclusive:unchecked:disabled {
    image: url('%file:/icons/checkbox_unchecked_disabled.png%');
}

QMenu::indicator:non-exclusive:checked {
    image: url('%file:/icons/checkbox_checked.png%');
}

QMenu::indicator:non-exclusive:checked:hover,
QMenu::indicator:non-exclusive:checked:focus,
QMenu::indicator:non-exclusive:checked:pressed {
    border: none;
    image: url('%file:/icons/checkbox_checked_focus.png%');
}

QMenu::indicator:non-exclusive:checked:disabled {
    image: url('%file:/icons/checkbox_checked_disabled.png%');
}

QMenu::indicator:non-exclusive:indeterminate {
    image: url('%file:/icons/checkbox_indeterminate.png%');
}

QMenu::indicator:non-exclusive:indeterminate:disabled {
    image: url('%file:/icons/checkbox_indeterminate_disabled.png%');
}

QMenu::indicator:non-exclusive:indeterminate:focus,
QMenu::indicator:non-exclusive:indeterminate:hover,
QMenu::indicator:non-exclusive:indeterminate:pressed {
    image: url('%file:/icons/checkbox_indeterminate_focus.png%');
}

/* exclusive indicator = radio button style indicator (see QActionGroup::setExclusive) */
QMenu::indicator:exclusive:unchecked {
    image: url('%file:/icons/radio_unchecked.png%');
}

QMenu::indicator:exclusive:unchecked:hover,
QMenu::indicator:exclusive:unchecked:focus,
QMenu::indicator:exclusive:unchecked:pressed {
    border: none;
    outline: none;
    image: url('%file:/icons/radio_unchecked_focus.png%');
}

QMenu::indicator:exclusive:unchecked:disabled {
    image: url('%file:/icons/radio_unchecked_disabled.png%');
}

QMenu::indicator:exclusive:checked {
    border: none;
    outline: none;
    image: url('%file:/icons/radio_checked.png%');
}

QMenu::indicator:exclusive:checked:hover,
QMenu::indicator:exclusive:checked:focus,
QMenu::indicator:exclusive:checked:pressed {
    border: none;
    outline: none;
    image: url('%file:/icons/radio_checked_focus.png%');
}

QMenu::indicator:exclusive:checked:disabled {
    outline: none;
    image: url('%file:/icons/radio_checked_disabled.png%');
}

QMenu::right-arrow {
    margin: 5px;
    padding-left:12px;
    image: url('%file:/icons/arrow_right.png%');
    height: 12px;
    width: 12px;
}

/* ##################################################################################### */

/* QAbstractItemView */

QAbstractItemView {
    alternate-background-color: %color:Widget Background 1%;
    color: %color:Text Color 1%;
    border-color: %color:Border Color 2%;
    border-radius: %number:Border Radius 1%;
}

QAbstractItemView QLineEdit {
    padding: 2px;
}

/* ##################################################################################### */

/* QAbstractScrollArea */

QAbstractScrollArea {
    background-color: %color:Widget Background 1%;
    border-color: %color:Border Color 2%;
    border-radius: %number:Border Radius 1%;
    padding: 2px;
    color: %color:Text Color 1%;
}

QAbstractScrollArea:disabled {
    color: %color:Disabled Color%;
}

/* ##################################################################################### */

/* QScrollArea */

QScrollArea QWidget QWidget:disabled {
    background-color: %color:Widget Background 1%;
}

/* ##################################################################################### */

/* QScrollBar */

QScrollBar:horizontal {
    height: 16px;
    margin: 2px 16px 2px 16px;
    border-color: %color:Border Color 2%;
    border-radius: %number:Border Radius 1%;
    background-color: %color:Widget Background 1%;
}

QScrollBar:vertical {
    background-color: %color:Widget Background 1%;
    width: 16px;
    margin: 16px 2px 16px 2px;
    border-color: %color:Border Color 2%;
    border-radius: %number:Border Radius 1%;
}

QScrollBar::handle:horizontal {
    background-color: %color:Widget Background 5%;
    border-color: %color:Border Color 2%;
    border-radius: %number:Border Radius 1%;
    min-width: 8px;
}

QScrollBar::handle:horizontal:hover {
    background-color: %color:Accent Color 2%;
    border: %color:Accent Color 2%;
    border-radius: %number:Border Radius 1%;
    min-width: 8px;
}

QScrollBar::handle:horizontal:focus {
    border-coor: %color:Border Selection Color 3%;
}

QScrollBar::handle:vertical {
    background-color: %color:Widget Background 5%;
    border-color: %color:Border Color 2%;
    min-height: 8px;
    border-radius: %number:Border Radius 1%;
}

QScrollBar::handle:vertical:hover {
    background-color: %color:Accent Color 2%;
    border: %color:Accent Color 2%;
    border-radius: %number:Border Radius 1%;
    min-height: 8px;
}

QScrollBar::handle:vertical:focus {
    border-coor: %color:Border Selection Color 3%;
}

QScrollBar::add-line:horizontal {
    margin: 0px 0px 0px 0px;
    border-image: url('%file:/icons/arrow_right_disabled.png%');
    height: 12px;
    width: 12px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::add-line:horizontal:hover,
QScrollBar::add-line:horizontal:on {
    border-image: url('%file:/icons/arrow_right.png%');
    height: 12px;
    width: 12px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::add-line:vertical {
    margin: 3px 0px 3px 0px;
    border-image: url('%file:/icons/arrow_down_disabled.png%');
    height: 12px;
    width: 12px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::add-line:vertical:hover,
QScrollBar::add-line:vertical:on {
    border-image: url('%file:/icons/arrow_down.png%');
    height: 12px;
    width: 12px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal {
    margin: 0px 3px 0px 3px;
    border-image: url('%file:/icons/arrow_left_disabled.png%');
    height: 12px;
    width: 12px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal:hover,
QScrollBar::sub-line:horizontal:on {
    border-image: url('%file:/icons/arrow_left.png%');
    height: 12px;
    width: 12px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical {
    margin: 3px 0px 3px 0px;
    border-image: url('%file:/icons/arrow_up_disabled.png%');
    height: 12px;
    width: 12px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical:hover,
QScrollBar::sub-line:vertical:on {
    border-image: url('%file:/icons/arrow_up.png%');
    height: 12px;
    width: 12px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollBar::up-arrow:horizontal,
QScrollBar::down-arrow:horizontal {
    background: none;
}

QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical {
    background: none;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

/* ##################################################################################### */

/* QTextEdit */

QTextEdit {
    background-color: %color:Widget Background 1%;
    color: %color:Text Color 1%;
    border-radius: %number:Border Radius 1%;
    border-color: %color:Border Color 2%;
}

QTextEdit:focus {
    border-coor: %color:Border Selection Color 3%;
}

QTextEdit:selected {
    background: %color:Accent Color 2%;
    color: %color:Widget Background 3%;
}

/* ##################################################################################### */

/* QTextEdit */

QPlainTextEdit {
    background-color: %color:Widget Background 1%;
    color: %color:Text Color 1%;
    border-radius: %number:Border Radius 1%;
    border-color: %color:Border Color 2%;
}

QPlainTextEdit:focus {
    border-coor: %color:Border Selection Color 3%;
}

QPlainTextEdit:selected {
    background: %color:Accent Color 2%;
    color: %color:Widget Background 3%;
}

/* ##################################################################################### */

/* QSizeGrip */

QSizeGrip {
    background: transparent;
    width: 12px;
    height: 12px;
    image: url('%file:/icons/window_grip.png%');
}

/* ##################################################################################### */

/* QStackedWidget */

QStackedWidget {
    padding: 2px;
    border-color: %color:Border Color 2%;
    border-color: %color:Border Color 1%;
}

/* ##################################################################################### */

/* QToolBar */

QToolBar {
    background-color: %color:Widget Background 3%;
    border-bottom: %color:Border Color 1%;
    padding: 1px;
    font-weight: bold;
    spacing: 2px;
}

QToolBar:disabled{
    background-color: %color:Widget Background 3%;
}

QToolBar::handle:horizontal {
    width: 16px;
    image: url('%file:/icons/toolbar_move_horizontal.png%');
}

QToolBar::handle:vertical {
    height: 16px;
    image: url('%file:/icons/toolbar_move_vertical.png%');
}

QToolBar::separator:horizontal {
    width: 16px;
    image: url('%file:/icons/toolbar_separator_horizontal.png%');
}

QToolBar::separator:vertical {
    height: 16px;
    image: url('%file:/icons/toolbar_separator_vertical.png%');
}

QToolButton#qt_toolbar_ext_button {
    background: %color:Widget Background 3%;
    border: 0px;
    color: %color:Text Color 1%;
    image: url('%file:/icons/arrow_right.png%');
}

/* ##################################################################################### */

/* QAbstractSpinBox */

QAbstractSpinBox {
    background-color: %color:Widget Background 1%;
    border-color: %color:Border Color 2%;
    color: %color:Text Color 1%;
    padding-top: 2px;
    padding-bottom: 2px;
    padding-left: 4px;
    padding-right: 4px;
    border-radius: %number:Border Radius 1%;
}

QAbstractSpinBox:up-button {
    background-color: transparent %color:Widget Background 1%;
    subcontrol-origin: border;
    subcontrol-position: top right;
    border-left: %color:Border Color 2%;
    border-bottom: %color:Border Color 2%;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    margin: 1px;
    width: 12px;
    margin-bottom: -1px;
}

QAbstractSpinBox::up-arrow,
QAbstractSpinBox::up-arrow:disabled,
QAbstractSpinBox::up-arrow:off {
    image: url('%file:/icons/arrow_up_disabled.png%');
    height: 8px;
    width: 8px;
}

QAbstractSpinBox::up-arrow:hover {
    image: url('%file:/icons/arrow_up.png%');
}

QAbstractSpinBox:down-button {
    background-color: transparent %color:Widget Background 1%;
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    border-left: %color:Border Color 2%;
    border-top: %color:Border Color 2%;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    margin: 1px;
    width: 12px;
    margin-top: -1px;
}

QAbstractSpinBox::down-arrow,
QAbstractSpinBox::down-arrow:disabled,
QAbstractSpinBox::down-arrow:off {
    image: url('%file:/icons/arrow_down_disabled.png%');
    height: 8px;
    width: 8px;
}

QAbstractSpinBox::down-arrow:hover {
    image: url('%file:/icons/arrow_down.png%');
}

QAbstractSpinBox:hover {
    border-coor: %color:Border Selection Color 2%;
    color: %color:Text Color 1%;
}

QAbstractSpinBox:focus {
    border-coor: %color:Border Selection Color 3%;
}

QAbstractSpinBox:selected {
    background: %color:Accent Color 2%;
    color: %color:Widget Background 3%;
}

/* ##################################################################################### */

/* QLabel */

QLabel {
    background-color: %color:Widget Background 1%;
    border: 0px solid %color:Widget Background 3%;
    padding: 2px;
    margin: 0px;
    color: %color:Text Color 1%;
}

QLabel:disabled {
    background-color: %color:Widget Background 1%;
    border: 0px solid %color:Widget Background 3%;
    color: %color:Disabled Color%;
}

/* ##################################################################################### */

/* QTextBrowser */

QTextBrowser {
    background-color: %color:Widget Background 1%;
    border-color: %color:Border Color 2%;
    color: %color:Text Color 1%;
    border-radius: %number:Border Radius 1%;
}

QTextBrowser:disabled {
    background-color: %color:Widget Background 1%;
    border-color: %color:Border Color 2%;
    color: %color:Disabled Color%;
    border-radius: %number:Border Radius 1%;
}

QTextBrowser:hover,
QTextBrowser:!hover,
QTextBrowser:selected,
QTextBrowser:pressed {
    border-color: %color:Border Color 2%;
}

/* ##################################################################################### */

/* QGraphicsView */

QGraphicsView {
    background-color: %color:Widget Background 1%;
    border-color: %color:Border Color 2%;
    color: %color:Text Color 1%;
    border-radius: %number:Border Radius 1%;
}

QGraphicsView:disabled {
    background-color: %color:Widget Background 1%;
    border-color: %color:Border Color 2%;
    color: %color:Disabled Color%;
    border-radius: %number:Border Radius 1%;
}

QGraphicsView:hover,
QGraphicsView:!hover,
QGraphicsView:selected,
QGraphicsView:pressed {
    border-color: %color:Border Color 2%;
}

/* ##################################################################################### */

/* QCalendarWidget */

QCalendarWidget {
    border-color: %color:Border Color 2%;
    border-radius: %number:Border Radius 1%;
}

QCalendarWidget:disabled {
        background-color: %color:Widget Background 1%;
        color: %color:Disabled Color%;
}

/* ##################################################################################### */

/* QLCDNumber */

QLCDNumber {
    background-color: %color:Widget Background 1%;
    color: %color:Text Color 1%;
}

QLCDNumber:disabled {
    background-color: %color:Widget Background 1%;
    color: %color:Disabled Color%;
}

/* ##################################################################################### */

/* QProgressBar */

QProgressBar {
    background-color: %color:Widget Background 1%;
    border-color: %color:Border Color 2%;
    color: %color:Text Color 1%;
    border-radius: %number:Border Radius 1%;
    text-align: center;
}

QProgressBar:disabled {
    background-color: %color:Widget Background 1%;
    border-color: %color:Border Color 2%;
    color: %color:Disabled Color%;
    border-radius: %number:Border Radius 1%;
    text-align: center;
}

QProgressBar::chunk {
